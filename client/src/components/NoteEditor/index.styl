.NoteEditor
  display: block
  max-width 400px
  margin auto
  padding: 30px 0px
  text-align: center

  .NoteEditorTitle
    display: block
    margin-bottom: 15px


  input, textarea
    display: block
    width: 100%
    padding: 15px
    margin-bottom: 15px
    border-radius 4px
    border 1px solid #555
    text-align: left

   textarea
     resize none

   button
     display: inline-block
     padding: 15px 30px
     border-radius 4px
     border 1px solid #555
